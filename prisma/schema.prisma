generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(cuid())
  email           String          @unique
  name            String?
  password        String
  avatarUrl       String?         // ã‚¢ãƒã‚¿ãƒ¼ç”»åƒURLï¼ˆbase64ã¾ãŸã¯ãƒ•ã‚¡ã‚¤ãƒ«ãƒ‘ã‚¹ï¼‰
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  chats           Chat[]
  createdChannels Channel[]       @relation("ChannelCreator")
  channelMembers  ChannelMember[]
  reactions       Reaction[]

  @@map("users")
}

model Channel {
  id          String          @id @default(cuid())
  name        String          @unique
  createdById String
  createdBy   User            @relation("ChannelCreator", fields: [createdById], references: [id], onDelete: Cascade)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  chats       Chat[]
  members     ChannelMember[]

  @@map("channels")
  @@index([createdById])
}

model ChannelMember {
  id        String   @id @default(cuid())
  channelId String
  channel   Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  joinedAt  DateTime @default(now())

  @@unique([channelId, userId])
  @@map("channel_members")
  @@index([channelId])
  @@index([userId])
}

model Chat {
  id        String     @id @default(cuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  channelId String
  channel   Channel    @relation(fields: [channelId], references: [id], onDelete: Cascade)
  message   String
  imageUrl  String?    // ç”»åƒã®URLï¼ˆbase64ã¾ãŸã¯ãƒ•ã‚¡ã‚¤ãƒ«ãƒ‘ã‚¹ï¼‰
  createdAt DateTime   @default(now())
  reactions Reaction[]

  @@map("chats")
  @@index([userId])
  @@index([channelId])
}

